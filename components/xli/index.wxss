.wrapper{
  --padding: 5vw;
  margin: 2.5vw var(--padding);
  padding-bottom: 2.5vw;
  border-bottom: 1px solid #eee;
  display: flex;
  color: #444;
  --labelW: 20vw;
  box-sizing: border-box;
}

.name{
  width: var(--labelW);
}

.require {
  color: red;
}

.txt{
  height: 50px;
}

.select,
.picker{
  width: 100%;
  height: 22px;
}

.noval{
  color: #aaa;
}

.photos{
  --rowW: (100vw - var(--padding) * 2 - var(--labelW));
  --imgW: (var(--rowW) * 0.3);
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  margin-right: -2.5%;
}

.img-box{
  width: calc(var(--imgW));
  height: calc(var(--imgW));
  padding: 2.5%;
  position: relative;
}

.img{
  width: 100%;
  height: 100%;
}

.close{
  position: absolute;
  z-index: 10;
  top: 0;
  right: 0;
  color: red;
  padding: 3px 5px;
  border: 1px solid red;
  border-radius: 50%;
  font-size: small;
}

.btn{
  border: 1px dashed #aaa;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #aaa;
  width: calc(calc(var(--imgW)) - 2px);
  height: calc(calc(var(--imgW)) - 2px);
  margin-bottom: 2.5vw;
  font-size: large;
  font-weight: 900;
  margin: 2.5%;
}

.input{
  flex: 1;
  margin: -2.5vw 0;
  height: 42px;
}
