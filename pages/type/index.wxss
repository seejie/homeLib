.wrapper{
  background-color: #f6f6f6;
  height: 100vh;
}

.panel {
  background-color: #fff;
}

.title{
  padding: 5vw;
  color: #999;
  background-color: #f6f6f6;
  display: flex;
  align-items: center;
}

.row {
  padding: 3vw 0;
  margin: 0 5vw;
}

.row + .row {
  border-top: 1px solid #eee;
}

.back{
  background-color: rgb(0, 218, 218);
  text-align: center;
  padding: 3vw;
  margin-top: 10vw;
}

.nothing{
  text-align: center;
}

.btn{
  padding: 3px 12px;
  background-color: #fff;
  border-radius: 4px;
  border: 1px solid #999;
  cursor: pointer;
}

.input{
  border: 1px solid #999;
  padding: 3px 5px;
  margin: 0 2vw 0 20vw;
  flex: 1;
  background-color: #fff;
  border-radius: 4px;
}
